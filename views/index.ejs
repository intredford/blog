<!-- views/index.ejs -->
<link rel = "stylesheet" href = "/public/css/post.css">

<section>
	<% if (posts.length) { %>
		<% for (let i = 0; i < posts.length; i++) { %>  
			<article class="post">
				<%- posts[i].html %>
				<small class="post-date"><%= posts[i].date %></small> <!-- Добавляем вывод даты -->
			</article>
		<% } %>
	<% } else { %>
		<p><i>По запросу «<%- query %>» ничего не найдено.</i></p>
	<% } %>
</section>

<script src = "/public/js/wrap-images.js"></script>