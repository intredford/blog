<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="ru">
<head>
	<% const imgNumber = 25 %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="<%= meta.description %>">
    <meta name="author" content="Дима">

	<link rel="preload" as="font" type="font/ttf" crossorigin='anonymous' href="/public/font/IBM_Plex_Sans/hinted-subset-IBMPlexSans-Regular.ttf">
	<link rel="preload" as="font" type="font/ttf" crossorigin='anonymous' href="/public/font/IBM_Plex_Sans/hinted-subset-IBMPlexSans-Bold.ttf">
	<link rel="preload" as="font" type="font/woff2" crossorigin='anonymous' href="/public/font/Fira_Code/FiraCode-Regular.woff2">

	<link rel="preload" as="image" href="/public/logo/logo-<%= imgNumber %>-min.png">

    <link rel="stylesheet" href="/public/font/IBM_Plex_Sans/styles.css">
    <link rel="stylesheet" href="/public/font/Fira_Code/styles.css">
    <link rel="stylesheet" href="/public/css/main.css">
    <link rel="stylesheet" href="/public/css/layout.css">
    <link rel="stylesheet" href="/public/css/dark-mode.css">
    <link rel="stylesheet" href="/public/css/hljs/alabaster.min.css">
    <link rel="icon" href="/public/favicon.png">
    <title><%= meta.title %></title>
</head>
<body>
    <header>

		<picture>
			<% if (index) { %>
				<source media="(prefers-color-scheme: dark)" srcset="/public/logo/logo-25-dark-min.png">
				<img id="logo" class = "logo-<%= imgNumber %>" src="/public/logo/logo-<%= imgNumber %>-min.png" height="120" alt = "Дима">
			<% } else { %>
				<a href="/">
					<source media="(prefers-color-scheme: dark)" srcset="/public/logo/logo-25-dark-min.png">
					<img src="/public/logo/logo-<%= imgNumber %>-min.png" height="120" alt = "Дима">
				</a>
			<% } %>
		</picture>

    </header>
    <main>
        <%- include('index') %>
    </main>
    <footer>
        <div class = "dark-mode-control">
            <input type="checkbox" id="darkModeCheckbox">
            <label for="darkModeCheckbox">Тёмная тема</label>
        </div>
        <p>© 2003 — 3023 Дима. Все права поражены.</p>    
        <p>Политика транцендентальности&nbsp;&nbsp; О вас</p>
    </footer>
</body>

<noscript>
    <style>
        .dark-mode-control {
            display: none;
        }
    </style>
</noscript>

<script>
// поменять лого
const isDarkTheme = window.matchMedia('(prefers-color-scheme: dark)').matches
const logoImage = document.getElementById("logo");
if (!isDarkTheme) {
	logoImage.addEventListener("click", () => {
		const number = Math.floor(Math.random() * 25) + 1
		logoImage.src = `/public/logo/logo-${number}-min.png`;
		logoImage.className = `logo-${number}`
	});
}
</script>

<script src = "/public/js/dark-mode.js" defer></script>
</html>